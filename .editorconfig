root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,GNUmakefile,*.{c,h,mk}}]
indent_size = 4
tab_width = 4
indent_style = tab

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false
